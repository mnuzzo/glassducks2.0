<%= simple_form_for @coop do |f| %>
  <%= select_tag(:major_id, options_for_select(@majors), :prompt => "Select a major") %>
  <%= f.input :title, label: "Co-Op Title" %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :company, label: "Company" %>
  <%= f.button :submit %>
<% end %>
